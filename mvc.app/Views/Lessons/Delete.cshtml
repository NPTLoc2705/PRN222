@model mvc.dataaccess.ViewModels.LessonDTO
@{
    ViewData["Title"] = "Delete Lesson";
    var courseId = ViewBag.CourseId;
    var module = ViewBag.Module;
}

<h1>Delete Lesson</h1>

<h3>Are you sure you want to delete this lesson?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContentType)
        </dd>
        <dt class="col-sm-2">
            Duration
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration) minutes
        </dd>
        <dt class="col-sm-2">
            Module
        </dt>
        <dd class="col-sm-10">
            @module.Title
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-courseId="@courseId" asp-route-moduleId="@module.ModuleId" asp-route-lessonId="@Model.LessonId">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-route-courseId="@courseId" asp-route-moduleId="@module.ModuleId" class="btn btn-secondary">Cancel</a>
    </form>
</div>