@model Booking
@{
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="header-section">
        <h1 class="page-title">Create New Booking</h1>
        <p class="page-subtitle">Schedule your appointment with ease</p>
    </div>

    <div class="form-wrapper">
        <div class="form-container">
            <form asp-action="Create" class="booking-form">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="BookingDate" class="form-label">
                            <i class="icon-calendar"></i>
                            Booking Date
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="BookingDate" class="form-input" type="datetime-local" />
                            <span class="input-focus-border"></span>
                        </div>
                        <span asp-validation-for="BookingDate" class="field-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="CustomerId" class="form-label">
                            <i class="icon-user"></i>
                            Customer ID
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="CustomerId" class="form-input" type="text" placeholder="Enter customer ID" />
                            <span class="input-focus-border"></span>
                        </div>
                        <span asp-validation-for="CustomerId" class="field-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="ConsultantId" class="form-label">
                            <i class="icon-briefcase"></i>
                            Consultant ID
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="ConsultantId" class="form-input" type="text" placeholder="Enter consultant ID" />
                            <span class="input-focus-border"></span>
                        </div>
                        <span asp-validation-for="ConsultantId" class="field-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label">
                            <i class="icon-clock"></i>
                            Start Date
                        </label>
                        <div class="input-wrapper">
                            <input asp-for="StartDate" class="form-input" type="datetime-local" />
                            <span class="input-focus-border"></span>
                        </div>
                        <span asp-validation-for="StartDate" class="field-error"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Status" class="form-label">
                            <i class="icon-status"></i>
                            Status
                        </label>
                        <div class="select-wrapper">
                            <select asp-for="Status" class="form-select"
                                    asp-items="Html.GetEnumSelectList<BookStatus>()">
                                <option value="" disabled selected>Select status</option>
                            </select>
                            <span class="select-arrow"></span>
                        </div>
                        <span asp-validation-for="Status" class="field-error"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <span class="btn-text">Create Booking</span>
                        <span class="btn-icon">→</span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="navigation-section">
        <a asp-action="Index" class="back-link">
            <span class="back-icon">←</span>
            Back to List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

